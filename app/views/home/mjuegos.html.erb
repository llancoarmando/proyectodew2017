                             <textarea class="form-control" rows="3" id="txt_materiales"></textarea>
                          </div>
                      </div>
                      
                      <div class="form-group">
                          <label for="inputcostoxpersona" class="col-sm-4 control-label">Costo x Persona</label>
                          <div class="col-sm-1">
                            <input type="number" class="form-control" id="txt_costo" placeholder="">
                          </div>
                          
                          <div class="col-md-1"></div>
                          <div class="col-md-2">
                            <input type="file" name="adjunto" id="exampleInputFile" placeholder="Adjuntar" >
                          </div>
                      </div>
                      
                      <BR>
                      <div class="col-md-4"></div>
                          <div class="col-md-4"> 
                              <button onclick="nuevo()"  type="button" class="btn btn-default"><strong>Nuevo</strong></button>&nbsp &nbsp &nbsp
                              <button onclick="guardar()"  type="button" class="btn btn-default"><strong>Guardar</strong></button>&nbsp &nbsp &nbsp
                              <button onclick="eliminar()"  type="button" class="btn btn-default"><strong>Eliminar</strong></button>&nbsp &nbsp &nbsp
                              <button onclick="cancelar()"  type="button" class="btn btn-default"><strong>Cancelar</strong></button>
                          </div>
                      </div>    
                      
                 <% end %> 
            </div>  
            
          </div>
        </div> 
      </div>
    </div>
</div>

