
<BR>
  
<div class="row">

    <div class="col-md-1"></div>

      <div class="col-md-10">
        <div class="panel panel-primary">
          <div class="panel-heading"><h4>Mantenimiento De Juegos</h4></div>
            <div class="panel-body" style="background-color:#FEF9E7;">
          
                    
                    <%= form_for :producto, :url => {:controller => "home", :action => "guardar_juego"}, :method => :post, :html => { :class => "form-horizontal" , :id => "formulario1"}  do |f| %>
                    
                    
                      <div class="form-group">
                          <label for="inputCodigo" class="col-sm-4 control-label">Código</label>
                          
